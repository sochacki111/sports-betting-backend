{
  "info": {
    "name": "Sports Betting Backend API",
    "description": "Complete API collection for Sports Betting Backend with Odds and Betting services",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "Odds Service",
      "item": [
        {
          "name": "Refresh Odds",
          "request": {
            "method": "POST",
            "header": [],
            "url": {
              "raw": "http://localhost:3001/games/refresh-odds",
              "protocol": "http",
              "host": ["localhost"],
              "port": "3001",
              "path": ["games", "refresh-odds"]
            },
            "description": "Fetch and update odds from The Odds API"
          }
        },
        {
          "name": "Get All Games",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "http://localhost:3001/games",
              "protocol": "http",
              "host": ["localhost"],
              "port": "3001",
              "path": ["games"]
            },
            "description": "Get all games with odds"
          }
        },
        {
          "name": "Get Upcoming Games",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "http://localhost:3001/games?status=UPCOMING",
              "protocol": "http",
              "host": ["localhost"],
              "port": "3001",
              "path": ["games"],
              "query": [
                {
                  "key": "status",
                  "value": "UPCOMING"
                }
              ]
            },
            "description": "Get only upcoming games"
          }
        },
        {
          "name": "Get Game by ID",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "http://localhost:3001/games/{{gameId}}",
              "protocol": "http",
              "host": ["localhost"],
              "port": "3001",
              "path": ["games", "{{gameId}}"]
            },
            "description": "Get specific game details with odds"
          }
        },
        {
          "name": "Generate Game Result",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"homeScore\": 3,\n  \"awayScore\": 1\n}"
            },
            "url": {
              "raw": "http://localhost:3001/games/{{gameId}}/result",
              "protocol": "http",
              "host": ["localhost"],
              "port": "3001",
              "path": ["games", "{{gameId}}", "result"]
            },
            "description": "Generate result for a game (scores can be omitted for random generation)"
          }
        },
        {
          "name": "Generate Random Game Result",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{}"
            },
            "url": {
              "raw": "http://localhost:3001/games/{{gameId}}/result",
              "protocol": "http",
              "host": ["localhost"],
              "port": "3001",
              "path": ["games", "{{gameId}}", "result"]
            },
            "description": "Generate random result for a game"
          }
        }
      ]
    },
