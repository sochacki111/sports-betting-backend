{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "sourceRoot": "apps",
  "monorepo": true,
  "root": "apps",
  "compilerOptions": {
    "deleteOutDir": true,
    "tsConfigPath": "apps/odds-service/tsconfig.app.json"
  },
  "projects": {
    "odds-service": {
      "type": "application",
      "root": "apps/odds-service",
      "entryFile": "main",
      "sourceRoot": "apps/odds-service/src",
      "compilerOptions": {
        "tsConfigPath": "apps/odds-service/tsconfig.app.json"
      }
    },
    "betting-service": {
      "type": "application",
      "root": "apps/betting-service",
      "entryFile": "main",
      "sourceRoot": "apps/betting-service/src",
      "compilerOptions": {
        "tsConfigPath": "apps/betting-service/tsconfig.app.json"
      }
    }
  }
}
