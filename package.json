{
  "name": "sports-betting-backend",
  "version": "0.0.1",
  "description": "",
  "author": "",
  "private": true,
  "license": "UNLICENSED",
  "scripts": {
    "build": "nest build",
    "build:odds": "nest build odds-service",
    "build:betting": "nest build betting-service",
    "format": "prettier --write \"apps/**/*.ts\" \"test/**/*.ts\"",
    "start": "nest start",
    "start:odds": "nest start odds-service --watch",
    "start:betting": "nest start betting-service --watch",
    "start:odds:dev": "nest start odds-service --watch",
    "start:betting:dev": "nest start betting-service --watch",
    "start:odds:debug": "nest start odds-service --debug --watch",
    "start:betting:debug": "nest start betting-service --debug --watch",
    "start:odds:prod": "node dist/apps/odds-service/main",
    "start:betting:prod": "node dist/apps/betting-service/main",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./apps/odds-service/test/jest-e2e.json",
    "prisma:generate": "prisma generate --schema=./apps/odds-service/prisma/schema.prisma && prisma generate --schema=./apps/betting-service/prisma/schema.prisma",
    "prisma:migrate:odds": "prisma migrate dev --schema=./apps/odds-service/prisma/schema.prisma",
    "prisma:migrate:betting": "prisma migrate dev --schema=./apps/betting-service/prisma/schema.prisma",
    "prisma:studio:odds": "prisma studio --schema=./apps/odds-service/prisma/schema.prisma",
    "prisma:studio:betting": "prisma studio --schema=./apps/betting-service/prisma/schema.prisma"
  },
  "dependencies": {
    "@grpc/grpc-js": "^1.12.4",
    "@grpc/proto-loader": "^0.7.14",
    "@nestjs/common": "^11.0.1",
    "@nestjs/config": "^3.2.3",
    "@nestjs/core": "^11.0.1",
    "@nestjs/microservices": "^11.0.1",
    "@nestjs/platform-express": "^11.0.1",
    "@nestjs/swagger": "^8.0.7",
    "@prisma/client": "^6.2.0",
    "axios": "^1.7.9",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.1",
    "nestjs-pino": "^4.3.0",
    "pino-http": "^10.3.0",
    "pino-pretty": "^11.2.2",
    "reflect-metadata": "^0.2.2",
    "rxjs": "^7.8.1"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3.2.0",
    "@eslint/js": "^9.18.0",
    "@nestjs/cli": "^11.0.0",
    "@nestjs/schematics": "^11.0.0",
    "@nestjs/testing": "^11.0.1",
    "@types/express": "^5.0.0",
    "@types/jest": "^30.0.0",
    "@types/node": "^22.10.7",
    "@types/supertest": "^6.0.2",
    "eslint": "^9.18.0",
    "eslint-config-prettier": "^10.0.1",
    "eslint-plugin-prettier": "^5.2.2",
    "globals": "^16.0.0",
    "jest": "^30.0.0",
    "prettier": "^3.4.2",
    "prisma": "^6.2.0",
    "source-map-support": "^0.5.21",
    "supertest": "^7.0.0",
    "ts-jest": "^29.2.5",
    "ts-loader": "^9.5.2",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.7.3",
    "typescript-eslint": "^8.20.0"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": ".",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "apps/**/*.(t|j)s"
    ],
    "coverageDirectory": "./coverage",
    "testEnvironment": "node",
    "roots": [
      "<rootDir>/apps/"
    ],
    "moduleNameMapper": {
      "^@app/(.*)$": "<rootDir>/apps/$1"
    }
  }
}
